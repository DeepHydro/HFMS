                                        <Path Data="M0,0 L10,5 0,10 0,0" Fill="White" Opacity=".8" />
                                        <Path Data="M0,0 L10,5 0,10 0,0" Fill="White" Opacity=".8" />
                                        <Rectangle Fill="White" Opacity=".8" Width="3" Height="10" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button x:Name="RewindButton"  Style="{StaticResource darkButtonStyle}">
                                <Button.Content>
