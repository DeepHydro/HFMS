	<Style TargetType="local:VideoController">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="local:VideoController">
					<StackPanel>
						<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
